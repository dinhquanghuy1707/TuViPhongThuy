@model PagedList.IPagedList<MVC.Models.TaiLieu>
@using PagedList.Mvc;
@{
    ViewBag.Title = "QuanLyTaiLieu";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
    

}
<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    QUẢN LÝ TÀI LIỆU
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-fw fa-desktop"></i>  <a href="index.html">Trang Quản Lý</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-fw fa-file"></i> Quản Lý Tài Liệu
                    </li>
                </ol>
            </div>
        </div>

        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">

                    <h4>THÊM MỚI TÀI LIỆU</h4>
                    <form role="form" action="~/Admin/QuanLyTaiLieu/InsertData" method="post">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Mã Tài Liệu</label>
                                <input class="form-control" name="maTaiLieu" placeholder="Nhập mã tài liệu...">
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Chủ Đề</label>
                                <input class="form-control" name="chuDe" placeholder="Nhập tên chủ đề...">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Tiêu Đề</label>
                                <input class="form-control" name="tieuDe" placeholder="Nhập tiêu đề...">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Nội Dung</label>
                                <textarea class="form-control" name="noiDung" id="editor1" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Link Ảnh</label>
                                <input class="form-control" name="linkAnh" placeholder="Nhập link ảnh...">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <center>
                                <button type="submit" class="btn btn-default">Xác Nhận</button>
                                <button type="reset" class="btn btn-default">Hủy Bỏ</button>
                            </center>
                        </div>
                    </form>

                </div>
                <!-- /.row -->
            </div>
            <!-- /#page-wrapper -->
        </div>
    </div>
</div>

<script type="text/javascript">
    CKEDITOR.replace('editor1');
</script> 