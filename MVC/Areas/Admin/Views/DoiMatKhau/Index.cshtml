@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";

}

<!DOCTYPE html>
<html lang="en">
<body>
    <div id="page-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Đổi Mật Khẩu</h3>
                        </div>
                        <div class="panel-body">
                            <form role="form" action="~/Admin/DoiMatKhau/submit">
                                <fieldset>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="Mật Khẩu Cũ" name="mkc" type="password" value="">
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="Mật Khẩu Mới" name="mkm" type="password" value="">
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="Nhập Lại Mật Khẩu Mới" name="mkm2" type="password" value="">
                                    </div>
                                    <!-- Change this to a button or input when using this as a form -->
                                    <input type="submit" class="btn btn-lg btn-success btn-block" value="Xác Nhận">
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>