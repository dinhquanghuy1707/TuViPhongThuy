    <script type="text/javascript">
        function clic(element) {
            $(function () {
                if (!document.getElementById("bday").value) {
                    alert("Vui Lòng Chọn Ngày Trước Khi Đổi!");
                }
                else {
                    var e = document.getElementById("bday");
                    var kieu = "";
                    if (document.getElementById("gender1").checked) kieu = "DA";
                    else kieu = "AD";

                    var url = '@Url.Action("Student", "LichAmDuong")';
                    $.get(url, { ngay: "" + e.value, kieu: "" + kieu }, function (response) {
                        $("#KetQua").html(response);
                    });
                }
            });
        }
